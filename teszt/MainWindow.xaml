<Window x:Class="WpfMapTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Map test" Height="400" Width="600" MinHeight="300" MinWidth="500" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="28" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="ImageMap"  Grid.Column="0" MouseWheel="ImageMap_MouseWheel" Margin="10" MouseMove="ImageMap_MouseMove"/>
        <Label x:Name="LabelStatus" Grid.Row="1" Grid.ColumnSpan="2" Background="DarkMagenta" Foreground="WhiteSmoke" Content="Application started." />
        <StackPanel Grid.Column="1" Margin="6">
            <Button x:Name="BtnRand" Content="&#xE156; Random" Click="BtnRand_Click" Margin="4" Padding="8" FontFamily="Segoe UI Symbol" FontSize="22" MaxWidth="250"/>
            <Button x:Name="BtnOpen" Content="&#xE1A5; Open" Click="BtnOpen_Click" Margin="4" Padding="8" FontFamily="Segoe UI Symbol" FontSize="22" MaxWidth="250"/>
            <Button x:Name="BtnRotate" Content="&#xE14A; Rotate" Click="BtnRotate_Click" Margin="4" Padding="8" FontFamily="Segoe UI Symbol" FontSize="22" MaxWidth="250"/>
            <Button x:Name="BtnRenderMode" Content=" &#xE149; Render" Click="BtnRenderMode_Click" Margin="4" Padding="8" FontFamily="Segoe UI Symbol" FontSize="22" MaxWidth="250" />
            <Slider x:Name="SliderImSize" Value="40" Minimum="20" Maximum="640" TickPlacement="BottomRight" TickFrequency="20" IsSnapToTickEnabled="True" Margin="4" ValueChanged="SliderImSize_ValueChanged" />
            <Label Content="{Binding ElementName=SliderImSize, Path=Value, UpdateSourceTrigger=PropertyChanged }" />
            <Slider x:Name="SliderRot" Value="0.1" Minimum="0" Maximum="4" Margin="4" ValueChanged="SliderRot_ValueChanged" />
        </StackPanel>
    </Grid>
</Window>
